    $(document).ready(function () {
        var focusTab = location.hash;
        console.log('anchor = ' + focusTab);
        if (focusTab) {
            var tablink = $('#tab-nav a[href$="' + focusTab + '"]');
            console.log('tablink.length = ' + tablink.length);
            if (tablink.length > 0) {
                var tab = tablink.closest('li');
                console.log('tab.length=' + tab.length);
                if (tab.length > 0) {
                    console.log('tab id=' + tab.attr('id'));
                    $("#" + tab.attr('id')).trigger('click');
                }
            }
        }

        // sidebar
        $("#subNavigation li").click(function (e) {
            e.preventDefault();
            $(this).toggleClass('expanded');
            var currentItem = $(this).children('ul');
            currentItem.toggleClass('show');
        });

        // product tabs
        $("#tab-nav li").click(function (e) {
            e.preventDefault();
            console.log('click tab id=' + $(this).attr('id'));
            // active the selected tab
            if (!$(this).hasClass('active')) {
                $(this).addClass('active');
            };

            // unactive other items
            $("#tab-nav li").not($(this)).removeClass('active');

            // display corresponding tab content
            var index = $(this).index() + 1;
            var tabCount = $("#tab-nav li").length;
            for (var i = 1; i <= tabCount; i++) {
                if (i == index) {
                    $("#tab_" + i).addClass('show');
                } else {
                    $("#tab_" + i).removeClass('show');
                }
            }
        });

        $("#poll-no").click(function (e) {
            e.preventDefault();
            if (!$(this).hasClass('disabled')) {
                $('#poll-popup').show();
                $(this).addClass('disabled');
                $("#poll-yes").addClass('disabled');
            }
        });

        $("#poll-yes").click(function (e) {
            e.preventDefault();
            if (!$(this).hasClass('disabled')) {
                $('#poll-popup').show();
                $(this).addClass('disabled');
